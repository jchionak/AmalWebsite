<% layout('./layouts/boilerplate') %>

    <div class="container mt-3">
        <h1 class="text-center display-3">CONTACT</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Contact Anthony</h5>
                        <form action="/contact" method="POST" class="mb-2">
                            <div class="mb-2">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" id="email" name="email" class="form-control">
                            </div>
                            <div class="mb-2">
                                <label for="email" class="form-label">Inquiry</label>
                                <textarea name="inquiry" id="inquiry" cols="30" rows="4"
                                    class="form-control"></textarea>
                            </div>
                            <button class="btn btn-success">Submit</button>
                        </form>
                        <div>
                            <small>Please be aware it may take some time to respond to any inquiries posted.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>